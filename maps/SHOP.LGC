      if( MenuNVidUnderCursor()==713 )//продажа патронов
      {
        int minAmmo = GetValI2(true, "PlayerAmmo"+itoa(MenuNDirUnderCursor()),0) + PlayerAmmoWithWeapon[MenuNDirUnderCursor()];
