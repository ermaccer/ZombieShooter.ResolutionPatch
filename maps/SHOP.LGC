				//Log2("941 - " + itoa(dir) + " x =  " + itoa(GetX(i)) + " y =  " + itoa(GetY(i)));
			}
			else
        	if(vid == 940)
        	{
        		if(dir == 116)
        			giMenuSkills[0] = i;
        		if(dir == 93)
        			giMenuSkills[1] = i;
        		if(dir == 46)
