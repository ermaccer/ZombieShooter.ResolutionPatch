          --PlayerItem[MenuNDirUnderCursor()];
          MenuAction(720+MenuNDirUnderCursor(),PlayerItem[MenuNDirUnderCursor()],ACT_SET_ARMY,1);
          if( MenuNDirUnderCursor()==1 )
